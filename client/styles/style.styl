
@import 's-grid-settings'
@import 's-grid-functions'
@import 's-grid-classes' /* optional - only if you want to use helper classes */

// custom imports
@import 'mixins.import'
@import 'variables.import'

// media queries using rupture mixins:
    // +above(641px)
    // +above(1025px)
    // +above(1441px)
    // +above(1921px)
    // rupture docs: https://github.com/jenius/rupture
// or standard media queries with em or px
    // @media only screen and (min-width: 40.063em) /* min-width 641px */
    // @media only screen and (min-width: 64.063em) /* min-width 1025px */
    // @media only screen and (min-width: 90.063em) /* min-width 1441px */
    // @media only screen and (min-width: 120.063em) /* min-width 1921px */

// uncomment edit function to see grid borders
// edit()

*
    box-sizing border-box
html, body
    padding 0
    margin 0

header, footer, main
    padding rem-calc(25)

// header section
.header__menu
    ul
        list-style-type none
        margin 0
        padding 0
        li
            display inline
            padding-right rem-calc(10)
            .fa
                margin-right rem-calc(3)
                color color_test

// only for testing
section
    max-width rem-calc(1400)
    margin 0 auto
    grid()
    aside, article
        cell(1, 1)
    +above(40.063em)
        aside
            cell(1, 3)
        article
            cell(2, 3)
