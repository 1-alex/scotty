@import '../../packages/jeet'
@import 'mixins.import'

// edit()

*
    box-sizing border-box
html, body
    padding 0
    margin 0

header, footer, main
    padding rem-calc(25)

// header section
.header__menu
    ul
        list-style-type none
        margin 0
        padding 0
        li 
            display inline
            padding-right rem-calc(10)
            .fa
                margin-right rem-calc(3)

// only for testing
section
    center(1400px)
    aside, article
        stack()
    @media only screen and (min-width: 40.063em)
        aside
            col(1/3)
        article
            col(2/3)


